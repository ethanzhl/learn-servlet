<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>learn-servlet</display-name>

    <description>这是一个学习 servlet 的项目</description>

    <!--web.xml 加载顺序 context-param ==> listener ==> filter ==> servlet-->
    <context-param>
        <param-name>username</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>123456</param-value>
    </context-param>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <request-character-encoding>UTF-8</request-character-encoding>
    <response-character-encoding>UTF-8</response-character-encoding>

    <welcome-file-list>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/NotFound.html</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.NullPointerException</exception-type>
        <location>/Error.html</location>
    </error-page>

    <!--ServletContextListener 总是先创建-->
    <listener>
        <listener-class>com.ethan.learn.servlet.listener.ServletContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.ethan.learn.servlet.listener.ServletRequestListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.ethan.learn.servlet.listener.HttpSessionListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.ethan.learn.servlet.listener.ServletContextAttributeListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.ethan.learn.servlet.listener.ServletRequestAttributeListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.ethan.learn.servlet.listener.HttpSessionAttributeListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.ethan.learn.servlet.listener.HttpSessionBindingListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.ethan.learn.servlet.listener.HttpSessionActivationListener</listener-class>
    </listener>

    <filter>
        <filter-name>MyFilter</filter-name>
        <filter-class>com.ethan.learn.servlet.filter.MyFilter</filter-class>
        <async-supported>true</async-supported>
        <init-param>
            <param-name>username</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>123456</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>MyFilter2</filter-name>
        <filter-class>com.ethan.learn.servlet.filter.MyFilter2</filter-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>123456</param-value>
        </init-param>
    </filter>

    <!--多个 filter 匹配相同 url-pattern 执行顺序按 filter-mapping 定义顺序从上至下-->
    <filter-mapping>
        <filter-name>MyFilter2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>MyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--servlet 执行顺序通过 load-on-startup 的值从小到大顺序执行-->
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>com.ethan.learn.servlet.MyServlet</servlet-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>123456</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>MyServlet2</servlet-name>
        <servlet-class>com.ethan.learn.servlet.MyServlet2</servlet-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>123456</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/myServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyServlet2</servlet-name>
        <url-pattern>/myServlet2</url-pattern>
    </servlet-mapping>

</web-app>